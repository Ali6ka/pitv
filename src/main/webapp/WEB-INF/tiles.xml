<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    <!-- Header and footer -->
    <definition name=".footer" template="/WEB-INF/views/template/footer.jsp"></definition>
    <definition name=".header" template="/WEB-INF/views/template/header.jsp"></definition>

    <!-- Master -->
    <definition name="master" template="/WEB-INF/views/template/master.jsp">
        <put-attribute name="header" value=".header" />
        <put-attribute name="body" value="" />
        <put-attribute name="footer" value=".footer" />
    </definition>

</tiles-definitions>